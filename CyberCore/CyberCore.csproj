<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp3.1</TargetFramework>
        <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
        <Configurations>Debug;Release;LocalDebug</Configurations>
        <Platforms>AnyCPU</Platforms>
        <ServerGarbageCollection>true</ServerGarbageCollection>
        <ConcurrentGarbageCollection>true</ConcurrentGarbageCollection>
        <ThreadPoolMinThreads>500</ThreadPoolMinThreads>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="MySqlConnector" Version="0.64.0" />
      <PackageReference Include="OpenMiNET.OpenAPI" Version="1.0.73" />
<!--        <PackageReference Include="System.Management" Version="4.0.0" />-->
    </ItemGroup>

    <Target Name="AfterBuild">
        <Copy SourceFiles="$(ProjectDir)\CyberCore.dll" DestinationFolder="D:\MINET\Server\Plugins" SkipUnchangedFiles="false" />
<!--        <Copy SourceFiles="$(ProjectDir)..\..\Lib\*.dll" DestinationFolder="$(OutDir)Release\bin" SkipUnchangedFiles="false" />-->
    </Target>
    
    <ItemGroup>
      <Folder Include="Custom\Block" />
      <Folder Include="Custom\Sound" />
    </ItemGroup>


</Project>
